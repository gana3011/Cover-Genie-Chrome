{
    "manifest_version": 3,
    "name": "Cover Letter Generator",
    "version": "1.0",
    "permissions": ["scripting", "activeTab", "storage"],
    "host_permissions": ["https://www.linkedin.com/jobs/*", "https://www.indeed.com/viewjob*"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/jobs/*", "https://www.indeed.com/viewjob*"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["libs/pdfjs/*.mjs", "config.js","libs/jspdf/jspdf.umd.min.js"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  